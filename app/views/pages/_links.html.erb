<% if !@name.nil? %>
  <button class="btn btn-primary btn-lg">
    <%= link_to "Log in", login_path, remote: true %>
  </button>
  <button class="btn btn-primary btn-lg">
    <%= link_to "Sign up", signup_path, remote: true %>
  </button>
<% else %>
  <button class="btn btn-primary btn-lg">
    <%= link_to "Log Out", logout_path, remote: true, method: delete %>
  </button>
  <button class="btn btn-primary btn-lg">
    <%= link_to "Add a Secret", "", remote: true%>
  </button>
<% end %>
