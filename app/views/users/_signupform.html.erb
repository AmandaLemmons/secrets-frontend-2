<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for :user, remote: true do |f| %>
    <div class="form">
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.submit  %>
    </div>
    <% end %>
  </div>
</div>
